<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.simple.blog.mapper.RoleMapper">

    <resultMap id="BaseResultMap" type="com.simple.blog.entity.Role">
        <id column="id" jdbcType="BIGINT" property="id" />
        <result column="created_at" jdbcType="TIMESTAMP" property="createdAt" />
        <result column="updated_at" jdbcType="TIMESTAMP" property="updatedAt" />
        <result column="name" jdbcType="VARCHAR" property="name" />
        <result column="description" jdbcType="VARCHAR" property="description" />
        <result column="count" jdbcType="INTEGER" property="count" />
        <result column="status" jdbcType="VARCHAR" property="status" />
    </resultMap>

    <sql id="AllColumns">
        id, created_at, updated_at, name, description, count, status
    </sql>

    <insert id="save" parameterType="com.simple.blog.entity.Role" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO role ( created_at, updated_at, name, description, count, status )
        VALUES (
                   #{createdAt,jdbcType=TIMESTAMP} ,
                   #{updatedAt,jdbcType=TIMESTAMP} ,
                   #{name,jdbcType=VARCHAR} ,
                   #{description,jdbcType=VARCHAR} ,
                   #{count,jdbcType=INTEGER} ,
                   #{status,jdbcType=VARCHAR}
               )
    </insert>

    <insert id="saveAll" parameterType="java.util.List" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO role ( created_at, updated_at, name, description, count, status )
        values
        <foreach collection="list" item="item" index="index" separator=",">
            (
                #{item.createdAt,jdbcType=TIMESTAMP} ,
                #{item.updatedAt,jdbcType=TIMESTAMP} ,
                #{item.name,jdbcType=VARCHAR} ,
                #{item.description,jdbcType=VARCHAR} ,
                #{item.count,jdbcType=INTEGER} ,
                #{item.status,jdbcType=VARCHAR}
            )
            )
        </foreach>
    </insert>

    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM role
        WHERE id = #{id,jdbcType=BIGINT}
    </delete>

    <delete id="deleteByIds" parameterType="java.util.List">
        DELETE FROM role
        WHERE
        <choose>
            <when test="list==null || list.isEmpty()">
                1 = 0
            </when>
            <otherwise>
                id IN
                <foreach collection="list" item="id" index="index" open="(" close=")" separator=",">
                    #{id}
                </foreach>
            </otherwise>
        </choose>
    </delete>

    <update id="update" parameterType="com.simple.blog.entity.Role">
        UPDATE role
        SET
            created_at = #{createdAt,jdbcType=TIMESTAMP} ,
            updated_at = #{updatedAt,jdbcType=TIMESTAMP} ,
            name = #{name,jdbcType=VARCHAR} ,
            description = #{description,jdbcType=VARCHAR} ,
            count = #{count,jdbcType=INTEGER} ,
            status = #{status,jdbcType=VARCHAR}
        WHERE id = #{id,jdbcType=BIGINT}
    </update>

    <select id="findById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT
        <include refid="AllColumns" />
        FROM role
        WHERE id = #{id,jdbcType=BIGINT}
    </select>

    <select id="findByIds" parameterType="java.util.List" resultMap="BaseResultMap">
        SELECT
        <include refid="AllColumns" />
        FROM role
        WHERE
        <choose>
            <when test="list==null || list.isEmpty()">
                1 = 0
            </when>
            <otherwise>
                id IN
                <foreach collection="list" item="id" index="index" open="(" close=")" separator=",">
                    #{id}
                </foreach>
            </otherwise>
        </choose>
    </select>

    <select id="page" resultMap="BaseResultMap">
        SELECT
        <include refid="AllColumns" />
        FROM role
        <where>
            <if test="name != null and name !=''">
                AND name LIKE CONCAT('%', #{name}, '%')
            </if>
        </where>
    </select>

</mapper>